{# Contato: #}

<div class="contact-form">
    <div>
        <label class="mb-1 text-sm text-cinza"> Nome completo</label>
    	<div class="w-full">[text* id:nome class:rounded class:h-8 class:mb-3 class:px-2 class:mb-3 class:w-full class:nome name placeholder "Nome"] </div>
    </div>
    <div>
        <label class="mb-1 text-sm text-cinza"> E-mail </label>
        <div class="w-full">[email* id:email class:rounded class:h-8 class:mb-3 class:px-2 class:mb-3 class:w-full class:email email placeholder "Email"] </div>
    </div>
    <div>
        <label class="mb-1 text-sm text-cinza"> Telefone </label>
        <div class="w-full">[tel* tel-923 id:telefone class:rounded class:h-8 class:mb-3 class:px-2 class:mb-3 class:w-full class:telefone placeholder "Telefone"] </div>
    </div>
    <div>
        <label class="mb-1 text-sm text-cinza"> Sua mensagem </label>
        <div class="w-full">[textarea* message id:mensagem class:rounded class:mb-3 class:px-2 class:w-full class:mensagem x3 placeholder "Mensagem"] </div>
    </div>
    <div class="flex justify-center items-center flex-col">
        [submit id:btn-enviar class:m-auto class:btn class:mt-4 class:px-8 class:py-2 class:rounded-full class:bg-azul-400 class:text-white class:font-bold "Enviar"]
    </div>
</div>



{# EXEMPLO TAILWIND FLOATING LABEL #}
<div class="relative md:flex-[3] text-cinza-200">
    <input class="class:peer class:block class:bg-white class:w-full class:md:max-w-[260px] class:py-3 class:px-5 class:pr-3 class:shadow-sm 
    class:focus:outline-none class:focus:border-verde-100 class:focus:ring-verde-100 class:focus:ring-1 
    class:sm:text-sm class:mb-5 class:lg:mb-1 class:rounded-full class:placeholder-transparent" 
    id="email" name="email" type="email" placeholder="E-mail">
        <label class="absolute left-0 -top-1 pt-1 pl-5 
        text-xs text-left peer-placeholder-shown:text-base peer-placeholder-shown:top-2 transition-all" 
        for="email">E-mail</label>
</div>


























