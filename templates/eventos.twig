{% extends "base.twig" %}

{% block content %}

	<div class="content-wrapper">
		<div class="container mx-auto py-10">
			<h1 class="mb-4 text-4xl text-marrom font-bold">Not√≠cias e eventos</h1>
			{% for evento in eventos %}
				<div class="mx-auto mb-10 flex flex-col md:flex-row md:justify-between border-b">
					<div class="card md:w-5/12 my-0 md:order-2">
						<a href="{{evento.link}}">
							<img class="md:max-w-[441px] mb-4 max-h-80 w-auto mx-auto" src="{{evento.thumbnail.src}}" alt="" width="442" height="301">
						</a>
					</div>
					<div class="card md:w-5/12 my-6 md:order-1">
						<a href="{{evento.link}}">
							<h2 class="text-marrom text-3xl font-medium mb-4">{{evento.title}}</h2>
						</a>
						<p class="intro">{{evento.post_content|excerpt(30)}}...</p>
						<div class="flex justify-center md:justify-end">
							<a href="{{evento.link}}" class="btn mt-4 px-8 py-2 rounded-full bg-azul-400 hover:bg-azul-600 transition-all text-white font-bold hover:text-white">SAIBA MAIS</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div><!-- /content-wrapper -->

{% endblock %}